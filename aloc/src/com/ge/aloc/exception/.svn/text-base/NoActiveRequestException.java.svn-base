package com.ge.aloc.exception;

/**
 * @author chaitanya.n
 *
 */
public class NoActiveRequestException extends ALOCRuntimeException {

	private static final long serialVersionUID = -4235542095247144290L;

	private static final String EC_NO_ACTIVE_REQUEST = "REQUEST.NOACTIVE";

	/**
	 * default constructor
	 * @param code
	 */
	public NoActiveRequestException() {
		super(EC_NO_ACTIVE_REQUEST);
	}

	/**
	 * constructor with message.
	 * @param code
	 * @param message
	 */
	public NoActiveRequestException(String message) {
		super(EC_NO_ACTIVE_REQUEST, message);
	}

	/**
	 * constructor with code and cause.
	 * @param code
	 * @param cause
	 */
	public NoActiveRequestException(Throwable cause) {
		super(EC_NO_ACTIVE_REQUEST, cause);
	}

	/**
	 * constructor with message and cause.
	 * @param message
	 * @param cause
	 */
	public NoActiveRequestException(String message, Throwable cause) {
		super(EC_NO_ACTIVE_REQUEST, message, cause);
	}
}
